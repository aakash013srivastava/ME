<%- include('layout');%> Our Products


<div class="container">
    <table class="table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Itemname</th>
                <th>Firm</th>
                <th>Size</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            <%if(products){%>
            <%productRows= (products.split("\n")).slice(1);%>
            <% for(let x in productRows){%>
            <%let row =productRows[x].split(",")%>
            <tr>
                <td>
                    <%=row[0]%>
                </td>
                <td>
                    <%=row[1]%>
                </td>
                <td>
                    <%=row[2]%>
                </td>
                <td>
                    <%=row[3]%>
                </td>
                <td>
                    <%=row[4]%>
                </td>
                <td>
                    <%=row[5]%>
                </td>

            </tr> 
            <%}%>   <!-- End of for-->
            <%}%>   <!-- End of if-->
        </tbody>
    </table>
</div>
