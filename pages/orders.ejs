<%- include('layout');%>Orders
<div class="container">
    <%if(userDetails){%>  
    <table class="table-bordered table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Itemname</th>
                <th>Firm</th>
                <th>Size</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Bill</th>
                <th>Date</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            <% for(let x in orders){%>
            <%let row =orders[x].split(",")%>
            <tr>
                <td>
                    <%=row[0]%>
                </td>
                <td>
                    <%=row[1]%>
                </td>
                <td>
                    <%=row[2]%>
                </td>
                <td>
                    <%=row[3]%>
                </td>
                <td>
                    <%=row[4]%>
                </td>
                <td>
                    <%=row[5]%>
                </td>
                <td>
                    <%=row[6]%>
                </td>
                <td>
                    <%=row[7]%>
                </td>
                <td>
                    <%=userDetails[2]%>
                </td>
                <td>
                    <%=userDetails[3]%>
                </td>
                <td>
                    <%=userDetails[4]%>
                </td>

            </tr>    
        </tbody>
    </table>
    <button type="button" class="btn btn-primary" id="create" onclick="createOrder()">
        Create New Order
    </button>
    <form action="/newOrder" method="POST" id="newOrderForm">
        <select class="form-control form-control-sm">
            <option>Small select</option>
          </select>
          <select class="form-control form-control-sm">
            <option>Small select</option>
          </select>
          Price
    
          Quantity
    </form>

        <%}%>
        <%}else{%><!-- Scenario of unregistered user-->
        <h2>Register First</h2>
        <form action="/newUser" method="POST">
            <div class="form-group">
                <label for="phone">Phone(mobile)</label>
                <input type="tel" name="phone" pattern="[6-9]{1}[0-9]{9}" class="form-control" id="phone" required/>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <textarea class="form-control" name="address" id="address" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary mb-2">Register</button>
        </form>
        <%}%>
</div>

